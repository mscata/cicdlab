<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository>${user.home}/.m2/repository</localRepository>
    <servers>
        <server>
            <id>internalrepo</id>
            <username>cicdservice</username>
            <password>password</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>mavencentral</id>
            <mirrorOf>*,!internalrepo</mirrorOf>
            <url>http://artifactsrepo:8081/nexus/repository/maven-central/</url>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>internalrepo</id>
            <repositories>
                <repository>
                    <id>cicdlab</id>
                    <url>http://artifactsrepo:8081/nexus/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>cicdlab</id>
                    <url>http://artifactsrepo:8081/nexus/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</settings>
